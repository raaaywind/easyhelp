<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ddd"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:background="@drawable/ic_preference_normal"
                android:gravity="center_vertical"
                android:id="@+id/setting_push">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="账号"
                    android:textIsSelectable="true"
                    android:textSize="18dp"
                    android:id="@+id/id"
                    android:autoText="false"
                    android:textColor="#ff343434" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="200dp"
                    android:text=""
                    android:textIsSelectable="true"
                    android:textSize="18dp"
                    android:id="@+id/id_"
                    android:autoText="false"
                    android:textColor="#ff565656" />

            </RelativeLayout>
            <View
                android:layout_marginLeft="20dp"
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#ddd"/>

            <View
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#ddd"
                android:layout_marginLeft="20dp"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:background="@drawable/preference_item"
                android:gravity="center_vertical"
                android:id="@+id/setting_accountsafe"
                android:onClick="change_password">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="修改密码"
                    android:textSize="18dp"
                    android:id="@+id/setting_accountsafe1"
                    android:textColor="#ff343434" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:src="@drawable/mm_submenu" />
            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#ddd"
                android:layout_marginLeft="20dp"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:background="@drawable/preference_item"
                android:gravity="center_vertical"
                android:onClick="change_phone"
                android:id="@+id/setting_version">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="修改绑定手机"
                    android:id="@+id/setting_version1"
                    android:textSize="18dp"
                    android:textIsSelectable="false"
                    android:textColor="#ff343434" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:src="@drawable/mm_submenu" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:background="@drawable/preference_item"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"
                android:id="@+id/setting_aboutus">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="账户安全中心"
                    android:textSize="18dp"
                    android:textColor="#ff343434"
                    android:id="@+id/lll" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:src="@drawable/mm_submenu" />
            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#ddd"
                android:layout_marginLeft="20dp"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:background="@drawable/preference_item"
                android:gravity="center_vertical"
                android:id="@+id/setting_exit"
                android:onClick="exit_click">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="这里待填入信息"
                    android:id="@+id/setting_exit1"
                    android:textSize="18dp"
                    android:textColor="#ff343434" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:src="@drawable/mm_submenu" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>